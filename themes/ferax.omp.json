{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "white",
                    "properties": {
                        "fetch_version": false
                    },
                    "style": "plain",
                    "template": "({{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv -}} {{ end }}{{ .Full }}{{ end }})",
                    "type": "python"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "command",
                    "style": "plain",
                    "foreground": "lightBlue",
                    "properties": {
                        "command": "docker info &> /dev/null && echo 1 || echo 0"
                    },
                    "template": "{{ if eq .Output \"1\" }}<#32CD32>ä»š</>{{ else }}# {{ end }}"
                },
                {
                    "style": "plain",
                    "template": "<cyan>{{ .UserName }}</> <darkGray>@</> <green>{{ .HostName }}</>",
                    "type": "session"
                },
                {
                    "foreground": "lightYellow",
                    "properties": {
                        "style": "full"
                    },
                    "style": "plain",
                    "template": "<darkGray> in </>{{ .Path }} ",
                    "type": "path"
                },
                {
                    "style": "plain",
                    "template": "<darkGray>on</> <white>git:</><cyan>{{ .HEAD }}</>{{ if .Working.Changed }}<red> x</>{{ end }} ",
                    "type": "git",
                    "properties": {
                        "fetch_status": true
                    }
                },
                {
                    "foreground": "darkGray",
                    "style": "plain",
                    "template": "[{{ .CurrentDate | date .Format }}]",
                    "type": "time"
                },
                {
                    "foreground": "red",
                    "style": "plain",
                    "template": " C:{{ if gt .Code 0 }}{{ .Code }}{{ end }} ",
                    "type": "status"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "lightRed",
                    "style": "plain",
                    "template": "{{ if .Root }}%{{ else }}${{ end }}",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}
